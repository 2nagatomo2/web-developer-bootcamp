<% layout("layouts/boilerplate") -%>
<div class="row">
  <h1>キャンプ場の編集</h1>
  <div class="offset-3 col-6">
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">キャンプ場名</label
        ><input
          type="text"
          name="title"
          id="title"
          class="form-control"
          placeholder="キャンプ場名"
          value="<%= campground.title %>"
        />
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">価格</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">¥</span>
          <input
            type="number"
            name="price"
            id="price"
            class="form-control"
            placeholder="0"
            aria-describedby="price-label"
            value="<%= campground.price %>"
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">住所</label
        ><input
          type="text"
          name="location"
          id="location"
          class="form-control"
          placeholder="住所"
          value="<%= campground.location %>"
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">画像URL</label
        ><input
          type="text"
          name="image"
          id="image"
          class="form-control"
          placeholder="画像URL"
          value="<%= campground.image %>"
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">説明</label
        ><textarea
          name="description"
          id="description"
          class="form-control"
          placeholder="説明"
        >
<%= campground.description %></textarea
        >
      </div>
      <div class="mb-3">
        <button class="btn btn-info">更新する</button>
      </div>
    </form>
    <div class="mb-3">
      <a href="/campgrounds/<%= campground._id %>">キャンセル</a>
    </div>
    <div class="mb-3">
      <a href="/campgrounds">一覧に戻る</a>
    </div>
  </div>
</div>
