<% layout('layouts/boilerplate') -%>
<div class="row">
  <div class="offset-3 col-6">
    <div class="mb-3">
      <h1>ログイン</h1>
    </div>
    <form action="/login" method="POST" class="form validated-form" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">ユーザー名</label>
        <input
          type="username"
          class="form-control"
          name="username"
          id="username"
          placeholder="ユーザー名"
        />
        <div class="valid-feedback">ok!</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">パスワード</label>
        <input
          type="password"
          class="form-control"
          name="password"
          id="passwo"
          placeholder="パスワード"
        />
        <div class="valid-feedback">ok!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">ログイン</button>
      </div>
    </form>
  </div>
</div>
